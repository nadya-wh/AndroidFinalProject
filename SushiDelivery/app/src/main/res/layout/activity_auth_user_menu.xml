    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/relative_user_block"
        android:layout_marginBottom="@dimen/text_margin">

        <!-- Thumbnail Image -->
        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/user"/>

        <!-- Username Title -->
        <TextView
            android:id="@+id/username_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_icon"
            android:layout_toRightOf="@+id/user_icon"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:text="Title"/>

        <!-- Address -->
        <TextView
            android:id="@+id/address_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_line"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/user_icon"
            android:textSize="@dimen/address_size"
            android:text="Address"/>

        <!-- Phone line -->
        <TextView
            android:id="@+id/phone_line"
            android:text="Phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_line"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/user_icon"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/phone_size" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@id/relative_user_block" >
    <TextView
        android:text="@string/new_order"
        style="@style/MenuTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_order_text_view"
        android:clickable="true" />

    <TextView
        android:text="@string/title_activity_history"
        style="@style/MenuTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_history_view"
        android:layout_below="@+id/new_order_text_view"
        android:clickable="true" />

    <TextView
        android:text="@string/log_out"
        style="@style/MenuTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/log_out_text_view"
        android:layout_below="@+id/show_history_view"
        android:clickable="true" />
    </RelativeLayout>
</RelativeLayout>